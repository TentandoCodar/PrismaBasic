datasource db {
    provider = "postgresql"
    url = "***"
}

model Post {
    id Int @id @default(autoincrement())
    content String?
    title String
    author User?
}

model Profile {
    id Int @id @default(autoincrement())
    bio String?
    user User
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    name String?
    password String
    posts Post[]
    profiles Profile[]
}